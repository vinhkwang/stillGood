<div class="w-25 mx-auto login-box p-5 mt-5">
<div class="text-center"><%=image_tag("logo.png") %></div>
<h3 class="text-center" style="color: #1d434e;">Sign In</h3>

<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", floating: true %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", floating: true %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", extra_class: "authen-button" %>
  </div>
<% end %>

<div class="text-center"><%= render "devise/shared/links" %></div>
</div>